<!--include header-->
<%- include('../partials/adminHeader') %>

<!-- /header -->
<section>
    <div class="container mt-4 mb-5">
        <div class="row ">
            
            <div class="conatiner my-3 pb-2 "style="float-right">
                <a href="/admin/offerAdding">
                    <button class="btn btn-primary text-green" type="button" value="Search">Add-Offers</button>
                </a>
            </div>
                <div class="bg-light-title text-center py-3 mb-1">
                    <h2 class="mx-auto w-100">Product Offer Management</h2>
                </div>
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th scope="col">Offer Name</th>
                            <th scope="col">Category</th>
                            <th scope="col">Percentage</th>
                            <th scope="col">Expiry Date</th>
                            <th scope="col">Min Value</th>
                            <th colspan="2">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% offers.forEach((offer,index)=>{ %>
                        <tr>
                            <!-- <th scope="row">1</th> -->
                            <td><%= offer.offerTitle %></td>
                            <td><%=offer.offerCategory %></td>
                            <td><%= offer.percentage %></td>
                            <td><%= offer.expiryDate %></td>
                            <td> <%=offer.minValue%></td>
                            
                            <td>  
                                  
                                    <form action="/admin/offerDelete/<%=offer._id%>" method="post">
                                <div
                                    class="d-flex align-items-center justify-content-center">
                                    <button
                                        class="btn btn-danger m-2 d-flex justify-content-center"
                                        style="font-size: 13px;" type="submit"
                                        onclick="">
                                        Remove
                                    </button>
                                </div>
                            </form>
                            </td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        
    </div>
</section>
<!-- --include footer-- -->
<%- include("../partials/adminFooter")%>
<!-- /header -->