<!-- Include header -->
<%- include('../partials/adminHeader') %>

<section class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card rounded">

        <form class="p-4" method="POST" action="/admin/createCategory">
          <h3 class="fw-normal mb-4 text-center">Add Category</h3>

          <div class="mb-3">
            <label for="categoryName" class="form-label">Category Name</label>
            <input type="text" required id="categoryName" name="categoryName" class="form-control form-control-lg">
          </div>

          <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea required id="description" name="description" class="form-control form-control-lg"></textarea>
          </div>

          <div class="mb-3">
            <label class="form-label">Is Available</label><br>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="isAvailable" id="Yes" value="true">
              <label class="form-check-label" for="Yes">Yes</label>
            </div>
            <div class="form-check form-check-inline">
              <input class="form-check-input" type="radio" name="isAvailable" id="No" value="false">
              <label class="form-check-label" for="No">No</label>
            </div>
          </div>

          <div class="text-center mt-4">
            <button class="btn btn-dark btn-block " type="submit">Create</button>
          </div>

          <% if(locals.message){ %>
          <div class="alert alert-danger text-center mt-4" role="alert">
            <%= message %>
          </div>
          <% } %>
        </form>
      </div>
    </div>
  </div>
</section>

<!-- Include footer -->
