<!DOCTYPE HTML>

<html lang="en-US">

<head>

	<meta charset="UTF-8">

    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <meta name="viewport" content="width=device-width, initial-scale=1">

	<title>Tech Shop</title>

	<!-- Latest compiled and minified CSS -->

	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

	<!-- Google Font -->

	<link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700|Raleway:400,300,500,700,600' rel='stylesheet' type='text/css'>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.6.3/css/font-awesome.css" type="text/css">

    <!-- Theme Stylesheet -->

    <link rel="stylesheet" href="stylesheets/styles.css">

    <link rel="stylesheet" href="stylesheets/responsive.css">

</head>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

 <body>

   

    <div class="navigation">

        <nav class="navbar navbar-theme">
            <div class="container">       
                    <div class="collapse navbar-collapse" id="navbar">
                        <ul class="nav navbar-nav navbar-right" style="display: block;">

                            <li class="nav-item dropdown shop-category nav navbar-nav navbar-left">
                                <button class="btn btn-shop-category dropdown-toggle" style="margin-right: 820px;" id="categoriesDropdown" type="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="margin-top: 27px;">
                                    <!-- Categories -->
                                    Shop By Category 
                                </button>
                                
                                <div class="dropdown-menu" aria-labelledby="categoriesDropdown">
                                    <select class="form-select" onchange="window.location.href = this.value;">
                                        <option selected></option> 
                                        <% categorydata.forEach((category) => { %>
                                            <option value="/homefilter?selectcategory=<%= category.categoryName %>"><%= category.categoryName %></option>
                                        <% }) %>
                                    </select>
                                </div>
                                
                                
                            </li>
                            <li class="nav-item "id="navbar">
                                <a  class="nav-link" href="/"> Home</a></li>
                            <li style="padding-top: 2px;"><a href="/WishList"><svg xmlns="http://www.w3.org/2000/svg" width="14" height="16" fill="currentColor" class="bi bi-heart-fill " viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314z"/>
                            </svg></a></li>
        
                            <li>
                                <% if(locals.cartCount){%>
                                    <span id="cartItemCount" class="badge badge-pill bg-danger d-flex justify-content-center align-items-center p-1" style="border-radius: 50%; position: absolute; top: 20px;  width: 18px; height: 18px;font-size: 9px;">
                                        <%=locals.cartCount%>
                                    </span>
                                <%}else{%>
                                    <span id="cartItemCount" class="badge badge-pill bg-danger d-flex justify-content-center align-items-center p-1" style="border-radius: 50%; position: absolute; top: 20px;  width: 18px; height: 18px;font-size: 9px;">
                                        0
                                    </span>
                                <%}%>
                            </li>
                            <li><a href="/cart"><i class="fa fa-shopping-cart"></i></a></li>
                            <li><a href="/profile"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-fill" viewBox="0 0 16 16">
                                <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3Zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6Z"/>
                            </svg></a></li>
                            <% if(user){%>
                                <li class="nav-item">
                                    <a  class="nav-link" href="/logout"> Logout</a></li>
                            <% }else {%>
                                <li class="nav-item">
                                    <a class="nav-link" href="/login"><i class="fa fa-user"></i> Login</a></li>
                            <% } %>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
        

    </div>

    <div class="slider">

        <div class="container">

            <div class="row">

                <div class="col-md-8 col-sm-8">

                    <div class="slider big-slider">

                        <div id="featured" class="carousel slide" data-ride="carousel">

                          <!-- Indicators -->

                          



                          <!-- Wrapper for slides -->

                          <div class="carousel-inner" role="listbox">

                            <div class="item active" style="background-image:url('/image/slider-1.jpg')">

                               <div class="carousel-caption">

                                    <h4>Save up to 30%</h4>

                                    <h2 class="raleway">New collection <span>2023</span></h2>

                                    <!-- <a href="" class="btn btn-theme">Shop Now</a> -->

                                </div>

                            </div>

                          </div>

                        </div>

                    </div>

                </div>

                <div class="col-md-4 col-sm-4">

                    <div class="slider small-slider">

                        <div id="small-featured" class="carousel slide" data-ride="carousel">

                          <!-- Indicators -->

                          


                          <!-- Wrapper for slides -->

                          <div class="carousel-inner" role="listbox">

                            <div class="item active" style="background-image:url('/image/slider-small-1.jpg')">

                               <div class="carousel-caption">

                                    <h3>Kids Fashion</h3>

                                    <p>Save up to 50%</p>

                                    <!-- <a href="" class="btn btn-theme">Shop Now</a> -->

                                </div>

                            </div>

                          </div>

                        </div>

                    </div>

                </div>

            </div>

        </div>

    </div>

    <div class="banner">

        <div class="container">

            <div class="row">

                <div class="col-md-4 col-sm-4">

                    <div class="single-banner" style="background-image:url(/image/banner-1.jpg)">

                       <div class="banner-caption">

                            <h3>Awesome Bag Collection</h3>

                            <!-- <a href="" class="btn btn-theme">Shop Now</a> -->

                        </div>

                    </div>

                </div>

                <div class="col-md-4 col-sm-4">

                    <div class="single-banner" style="background-image:url(/image/banner-2.jpg)">

                       <div class="banner-caption">

                            <h3>Men Shirt Collection</h3>

                            <!-- <a href="" class="btn btn-theme">Shop Now</a> -->

                        </div>

                    </div>

                </div>

                <div class="col-md-4 col-sm-4">

                    <div class="single-banner" style="background-image:url(/image/banner-3.jpg)">

                       <div class="banner-caption">

                            <h3>Women Bag Collection</h3>

                            <!-- <a href="" class="btn btn-theme">Shop Now</a> -->

                        </div>

                    </div>

                </div>

            </div>

        </div>

    </div>

    

    <div class="featured-items">

        <div class="container">

            <div class="row">

                <ul class="nav nav-tabs nav-product-tabs">

                    <li class="active"><a href="#trending" data-toggle="tab">Trending Items</a></li>

                    <li><a href="#best-seller" data-toggle="tab">Best Seller</a></li>

                    

                    <li class="pull-right collection-url"><a href="">View All <i class="fa fa-long-arrow-right"></i></a></li>

                </ul>

                <div class="tab-content">

                    <div class="tab-pane active" id="trending">
                        <% Girls.forEach( element => {%>
                            
                        <div class="col-md-3 col-sm-4">

                            <div class="single-product">

                                <div class="product-block">

                                   <span> <a href="/product-view?id=<%= element._id %>">
                                        <img src="/productimages/<%= element.images[0] %>" id="home-img" alt="">
                                     </a>                                    
                                    </span>
                                    <div class="product-description text-center">
                                        <br>
                                        <h5 class="card-title text-danger"><%= element.p_name %></h5>

                                        <p class="card-text text-dark  ">â‚¹<%= element.originalprice %></p>

                                    </div>

                                    <div class="product-hover">

                                        <ul>

                                            <li><a href="/cart"><i class="fa fa-cart-arrow-down"></i></a></li>

                                            <li><a href=""><i class="fa fa-arrows-h"></i></a></li>

                                            <li><a href="/WishList"><i class="fa fa-heart-o"></i></a></li>

                                        </ul>

                                    </div>

                                </div>

                            </div>

                        </div>
                        <%})%>
                       
                    </div>
                </div>
            </div>
        </div>
    </div>

                        

   
    </body>
    <!-- </div>  -->
    <%- include("../partials/footer")%>
    