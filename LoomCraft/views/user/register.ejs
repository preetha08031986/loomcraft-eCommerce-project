<%- include('../layouts') %>

<% if (message.length) { %>
<div class="alert alert-danger">
    <%= message %>
</div>
<% } %>

<div class="container mt-5 ">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body" style="background-color: #7cbeab">
                    <h2 class="text-center mb-4">Sign Up</h2>
                    <form id="signupForm" action="/register" method="POST">
                        <!-- Add Referral Code Input Box Here -->
                        

                        <div class="form-group mb-3">
                            <input type="text" class="form-control" placeholder="First name" name="firstName">
                            <span class="error text-danger" id="firstNameError"></span>
                        </div>
                        <div class="form-group mb-3">
                            <input type="text" class="form-control" placeholder="Last name" name="lastName">
                            <span class="error text-danger" id="lastNameError"></span>
                        </div>
                        <div class="form-group mb-3">
                            <input type="text" class="form-control" placeholder="Email" name="email">
                            <span class="error text-danger" id="emailError"></span>
                        </div>
                        <div class="form-group mb-3">
                            <input type="password" class="form-control" placeholder="Password" name="password">
                            <span class="error text-danger" id="passwordError"></span>
                        </div>
                        <div class="form-group mb-3">
                            <input type="number" class="form-control" placeholder="Phone" name="phone">
                            <span class="error text-danger" id="phoneError"></span>
                        </div>
                        <div class="form-group mb-3">
                          <input type="text" class="form-control" placeholder="Referral Code" name="referralCode">
                          <span class="error text-danger" id="referralCodeError"></span>
                        </div>
                        <div class="text-center mt-3">
                            <button type="submit" class="btn btn-success btn-block text-dark" style="background-color: #f3c699">Submit</button>
                        </div><br>
                        <div class="text-center"> TechShop user?<br><a href="/login" class="text-white">login</a></div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- --include footer-- -->

<script>
    // Your JavaScript validation code (unchanged)
</script>

<script>
    const form = document.getElementById('signupForm');

    form.addEventListener('submit', (event) => {
        let valid = true;

        // Reset error messages
        document.getElementById('referralCodeError').textContent = '';
        document.getElementById('firstNameError').textContent = '';
        document.getElementById('lastNameError').textContent = '';
        document.getElementById('emailError').textContent = '';
        document.getElementById('passwordError').textContent = '';
        document.getElementById('phoneError').textContent = '';

        // Validate referral code (optional, if provided)
        const referralCode = form.elements['referralCode'].value;
        if (referralCode.trim() !== '' && !/^[A-Za-z0-9]+$/.test(referralCode)) {
            document.getElementById('referralCodeError').textContent = 'Please enter a valid referral code.';
            valid = false;
        }

        // Rest of your validation code here...

        if (!valid) {
            event.preventDefault(); // Prevent form submission if validation fails
        }
    });
</script>
